                @Html.EditorFor(model => model.Demande, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Demande, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Envoyer" class="btn btn-default" />
                <a href="@Url.Action("Index", "Home")" class="btn btn-info"> <i class="fa fa-home"> </i>  Retour à l'accueil</a>

