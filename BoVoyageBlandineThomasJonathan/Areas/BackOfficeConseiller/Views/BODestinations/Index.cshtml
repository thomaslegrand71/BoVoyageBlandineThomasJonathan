@model IEnumerable<BoVoyageBlandineThomasJonathan.Models.Destination>

@{
    ViewBag.Title = "Liste Destinations";
}

<h2 style="text-align: center">Destinations</h2>
<hr />
<a class="btn btn-basic" role="button">
    @Html.ActionLink("Ajouter destination", "Create")
</a>

@*Essai de creation de boutons pour accéder aux différents menu - à retravailler si possible*@
@*<a  href="@Url.RouteUrl("Create", "BODestinatiion")" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Ajouter destination</a>*@

<a href="button" class="btn btn-basic">
    @Html.ActionLink("Rechercher destination", "Search")
</a>

<br />
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Continent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Continent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
